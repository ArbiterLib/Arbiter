{
  "extends": "eslint:recommended",
  "env": {
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "error",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-var": "error",
    "prefer-const": "error",
    "prefer-spread": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "allowTemplateLiterals": true }]
  }
}
